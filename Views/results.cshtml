<section>
    <div class="col-xs-12">
        <div class="panel panel-info table-responsive">
            <div class="panel-heading">
                <h6>
                    Results:
                </h6>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Language 1</th>
                            <th>Language 2</th>
                            <th>Hit count</th>
                            <th>Miss count</th>
                            <th>Success</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="word in results" data-ng-class="{'danger': word.countMiss >= 2, 'success': word.countMiss == 0, 'warning': word.countMiss == 1}">
                            <td>{{word.lang1}}</td>
                            <td>{{word.lang2}}</td>
                            <td>{{word.countHit}}</td>
                            <td>{{word.countMiss}}</td>
                            <td>{{word.rate}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>