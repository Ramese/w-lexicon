<section>
    <div class="col-xs-12 col-sm-6" >
        <div class="panel table-responsive" data-ng-class="{'panel-default': dictionary.length == 0, 'panel-success': dictionary.length > 0 }">
            <div class="panel-heading">
                <h6>
                    <span class="glyphicon glyphicon-tags"></span> Dictionary:
                </h6>
            </div>
            <div class="panel-body" data-ng-show="started == 0">

                <table class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th><input class="btn btn-info" type="button" value="Remove all" data-ng-click="removeAll()" /></th>
                            <th>Language 1</th>
                            <th>Language 2</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="word in dictionary">
                            <td>
                                <a href="" data-ng-click="removeWord(word.id)">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            </td>
                            <td>{{word.lang1}}</td>
                            <td>{{word.lang2}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-body" data-ng-show="started == 1">
                <span>Cheating is forbidden!</span>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="col-xs-12 col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h6>
                    <span class="glyphicon glyphicon-open"></span> Upload:
                </h6>
            </div>
            <div class="panel-body text-center">
                <div class="col-sm-12 text-center">
                        <input type="button" value="Choose file" class="btn btn-primary"  data-ngf-change="upload($files)"  data-ngf-multiple="true" data-ngf-select data-ngf-accept="'.csv,.txt'" />

                    <div data-ngf-drop data-ngf-select data-ng-model="files" class="drop-box col-sm-12" 
                data-ngf-drag-over-class="dragover" data-ngf-multiple="true" data-ngf-allow-dir="false"
                data-ngf-accept="'.csv,.txt'">
                            Drop CSV or TXT file here
                    </div>
                    <div data-ngf-no-file-drop>
                        File Drag/Drop is not supported for this browser
                    </div> 
                </div>



                <input type="button" class="btn btn-primary" value="Load animals dict" data-ng-click="loadAnimals()" />
                <input type="button" class="btn btn-primary" value="Load color dict" data-ng-click="loadColors()" />
            </div>
        </div>
    </div>
</section>

<section>
    <div class="col-xs-12 col-sm-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h6>
